{
  "id": "spin-machina",
  "initial": "preloading",
  "context": {
    "focus": 0
  },
  "states": {
    "preloading": {
      "entry": [
        "onPreload"
      ],
      "after": {
        "50": {
          "target": "loading"
        }
      }
    },
    "loading": {
      "entry": [
        "focusPanel",
        "loadPanel"
      ],
      "on": {
        "PANEL_LOADED": {
          "target": "ready",
          "actions": [
            "setPanel"
          ]
        },
        "PANEL_ERROR": {
          "target": "ready",
          "actions": [
            "setErrorPanel"
          ]
        }
      }
    },
    "ready": {
      "on": {
        "PANEL_LOAD": {
          "target": "preloading"
        },
        "NAVIGATE": {
          "target": "navigating",
          "actions": [
            "goToPanel"
          ]
        }
      }
    },
    "navigating": {
      "after": {
        "100": {
          "target": "ready"
        }
      }
    }
  }
}